{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "..",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["src/*"],
      "@amplify/*": ["amplify/*"],
      "#app": ["node_modules/nuxt/dist/app"],
      "#app/*": ["node_modules/nuxt/dist/app/*"]
    },
    "types": ["vitest/globals", "node"]
  },
  "include": [
    "**/*.ts",
    "**/*.vue",
    "../src/**/*.ts",
    "../src/**/*.vue",
    "../amplify/**/*.ts",
    "../amplify_outputs.json"
  ],
  "exclude": ["node_modules", "e2e/**/*"]
}
